var win = Ti.UI.createWindow();

var navWin = Ti.UI.createWindow({
	title: "My Shopping List",
	modal: true,
	backgroundColor: "#fff"
});

var navGroup = Ti.UI.iPhone.createNavigationGroup({
	backgroundColor: "#fff",
	window: navWin
	
});
	

var myList = {
	"superheroes" : {
		"headTitle": "Superheros",
		"footTitle": "Heroes fight for justice!",
		"identity": [
			{"name": "Superman", "description": "Superman is the Man of Steel!"},
			{"name": "Batman", "description": "Batman is the Dark Knight!"},
			{"name": "Green Arrow", "description": "Billionair Oliver Queen"}
		]
	},
	"supervillians":{
		"headTitle": "Supervillians",
		"footTitle": "Villians are crime lords.",
		"identity": [
			{"name": "Lex Luther", "description": "He is Superman's enemy."},
			{"name": "The Joker", "description": "Everything is a joke to this guy."},
			{"name": "Deathstroke", "description": "This masked mercenary put fear in all he encounters."}
		]
	}
};


var table = Ti.UI.createTableView({
	style: Ti.UI.iPhone.TableViewStyle.GROUPED,
});

var getDetail = function(){
	var detailWindow = Ti.UI.createWindow({
		backgroundColor: "#595BC2",
		title: this.title,
		modal: true
	});
	var detailText = Ti.UI.createLabel({
		text: this.desc,
		color: "#fff",
		font: {fontSize: 18, fontFamily: "Arial"}
		
	});
	detailWindow.add(detailText);
	navGroup.open(detailWindow, {animation: true});
	
};

var mySections = [];
for(n in myList){
	var tableSection = Ti.UI.createTableViewSection({
		headerTitle: myList[n].headTitle,
		footerTitle: myList[n].footTitle
	});
	for(var i = 0; i<myList[n].itemsNeeded.length; i++){
		var theRow = Ti.UI.createTableViewRow({
			title: myList[n].identity[i].name,
			desc: myList[n].identity[i].description,
			hasChild: true
		});
		tableSection.add(theRow);
		theRow.addEventListener("click", getDetail);
	}
	mySections.push(tableSection);	
};

table.setData(mySections);



navWin.add(table);
win.add(navGroup);
win.open();
