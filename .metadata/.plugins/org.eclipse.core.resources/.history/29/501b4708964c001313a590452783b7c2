var galWin = Ti.UI.createWindow({
	title: "Gallery",
	backgroundColor: "#fff",
	modal: true,
	layout: "horizontal"
});

var navWin2 = Ti.UI.iOS.createNavigationWindow({
	window: galWin
});

var closeButtonView = Ti.UI.createView({
	backgroundColor: "#B00707",
	height: 50,
	bottom: 0
});

var closeButtonLabel = Ti.UI.createLabel({
	text: "Close",
	color: "#E3E6E3",
	textAlign: "center",
	font: {fontSize: 20, fontFamily: "Times New Roman"}
	
});

var photoList = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "images");
var imageList = photoList.getDirectoryListing();



var makeViews = function(){
	for(var i=0; i<imageList.length; i++){
		var imageWrapper = Ti.UI.createView({
			top: 4,
			left: 4,
			backgroundColor: "#9C9316",
			width: 75,
			height: 75
			
		});
		var newView = Ti.UI.createImageView({
			image: imageList[i],
			
		});
		
		newView.add(newLabel);
		galWin.add(newView);
		
	}
	
};
makeViews();

enterButtonView.addEventListener("click", function(){
	navWin2.open();
});

closeButtonView.addEventListener("click", function(){
	navWin2.close();
});

closeButtonView.add(closeButtonLabel);
navWin2.add(closeButtonView);
