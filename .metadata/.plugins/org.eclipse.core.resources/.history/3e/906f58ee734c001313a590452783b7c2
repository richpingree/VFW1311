var mainWin = Ti.UI.createWindow({
	title: "Project 3",
	backgroundColor: "#0202CF",
	modal: true
});

var galWin = Ti.UI.createWindow({
	title: "Gallery",
	backgroundColor: "#fff",
	modal: true
});

var galWinView = Ti.UI.createView();

var enterButtonView = Ti.UI.createView({
	backgroundColor: "#089C19",
	width: 150,
	height: 50,
	borderRadius: 10,
	alignment: "center"
});

var enterButtonLabel = Ti.UI.createLabel({
	text: "View Photos",
	color: "#E3E6E3s",
	textAlign: "center",
	font: {fontSize: 20, fontFamily: "Times New Roman"}	
});

enterButtonView.addEventListener("click", function(){
	galWin.open();
});

var closeButtonView = Ti.UI.createView({
	backgroundColor: "#B00707",
	height: 50,
	bottom: 0
});

var closeButtonLabel = Ti.UI.createLabel({
	title: "Close",
	color: "#E3E6E3",
	textAlign: "center",
	font: {fontSize: 20, fontFamily: "Times New Roman"}
	
});

closeButtonView.addEventListener("click", function(){
	galWin.close();
});

enterButtonView.add(enterButtonLabel);
closeButtonView.add(closeButtonLabel);

mainWin.add(enterButtonView);
galWin. add(closeButtonView);

mainWin.open();


