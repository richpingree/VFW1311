var viewHeight = 100;
var labelColor = "#fff";
var textFont = {fontSize: 20, fontFamily: "Times New Roman"};

var mainWin = Ti.UI.createWindow({
	title: "Project Week 2",
	font: {fontSize: 20, fontFamily: "Times New Roman"},
	modal: true,
	backgroundColor: "#3C7502"
	
});

var navWin = Ti.UI.iOS.createNavigationWindow({
	window: mainWin
});


var viewButtons = {
	"views": [
		{"backColor": "#3605E8", "height": 100, "top": 10},
		{"backColor": "#E60505", "height": 100, "top": 110},
		{"backColor": "#6C00C4", "height": 100, "top": 220}
	],
	"labels": [
		{"text": "Gallery Page", "color": labelColor, "font": textFont, "align": "center"},
		{"text": "Member Page", "color": labelColor, "font": textFont, "align": "center"},
		{"text": "Custom Page", "color": labelColor, "font": textFont, "align": "center"},
	]
		
	
};

var buttons =[];
for(n in viewButtons){
	var viewsButtons = Ti.UI.createView({
		backgroundColor: viewButtons[n].backColor,
		height: viewButtons[n].height,
		top: viewButtons[n].top
	});
	for(var i=0; i<labels.identity.lenght; i++){
		var theLabels = Ti.UI.createLabel({
			text: viewButtons[n].labels.text,
			color: viewButtons[n].labels.color,
			font: viewButtons[n].labels.font,
			textAlign: viewButtons[n].labels.align
		});
		viewsButtons.add(theLabels);
	};
	buttons.push(viewsButtons);
};
