var totalViews = 20;

var viewsContainer = Ti.UI.createScrollView({
	layout: "vertical"
	
});

var makeViews = function(){
	for(var i=0; i<totalViews; i++){
		var newView = Ti.UI.createView({
			top: 4,
			left: 4,
			backgroundColor: "#fff",
			width: 75,
			height: 100
			
		});
		var newLabel = Ti.UI.createLabel({
			text: i,
			textAligh: "center"
			
		});
		newView.add(newLabel);
		viewsContainer.add(newView);
	};
	
};

makeViews();
var openGallery = function (){
	var galWin = Ti.UI.createWindow({
	title: "Photo Gallery",
	backgroundColor: "#0202CF"
		
});
	galWin.open();
};

galWin.add(viewsContainer);
viewPhotoButton.addEventListener("click", openGallery);